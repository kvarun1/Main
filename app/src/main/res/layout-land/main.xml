<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_loop"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0.2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/tenpower"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="10^"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="26sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#E91E1E"
            android:text="="
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lower"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="3"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:fontFamily="sans-serif-light"
            android:text="+"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#0d0d0d"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/secondlower"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="4"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="5"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="6"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:fontFamily="sans-serif-light"
            android:text="-"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#0d0d0d"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthlast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/thirdlower"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="7"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="8"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-light"
            android:text="9"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#f5f5f5"
            android:textSize="27sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:fontFamily="sans-serif-light"
            android:text="*"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#0d0d0d"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fourthlast"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/open"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:backgroundTint="#e0e0e0"
                android:fontFamily="sans-serif-light"
                android:text="("
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#0d0d0d"
                android:textSize="24sp" />

            <Button
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:backgroundTint="#e0e0e0"
                android:fontFamily="sans-serif-light"
                android:text=")"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#0d0d0d"
                android:textSize="24sp" />

            <Button
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:backgroundTint="#e0e0e0"
                android:fontFamily="sans-serif-light"
                android:text="√"
                android:textColor="#0d0d0d"
                android:textSize="24sp" />

            <Button
                android:id="@+id/clear_del"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:backgroundTint="#e0e0e0"
                android:fontFamily="sans-serif-condensed-light"
                android:text="@string/delete"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#0d0d0d"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:backgroundTint="#e0e0e0"
                android:fontFamily="sans-serif-light"
                android:text="/"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#0d0d0d"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fifthlower"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTintMode="add"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/Expression"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="start"
                    android:maxLines="2"
                    autofit:autoSizeMinTextSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="40sp"/>

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/Result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/cardview_dark_background"
                    android:maxLines="2"
                    android:textSize="35sp"
                    autofit:autoSizeMinTextSize="15sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ad_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="%"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="^"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="Feedback"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textColor="#F5F5F5"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ad_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lower"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="true"
            android:text="sin"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="true"
            android:text="cos"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="true"
            android:text="tan"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/secondlower"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="log"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="log2"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="log10"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/thirdlower"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="arc sine"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="arc cosine"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="arc tangent"
            android:textAlignment="center"
            android:textColor="#B3F5F5F5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#B3F5F5F5"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fourthlast"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="!"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="π"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="∛"
                android:textAlignment="center"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>